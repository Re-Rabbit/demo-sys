/// 仓库实体 表格
.order-store-table
  fz 0.85rem

  th
  td
    ta cen
    bdr $bd
    pad 0.5rem
  th
    bg $g1
  tr
    bdb $bd
  td
    &:nth-child(1)
      bg $g1
    &:nth-child(3)
      ta l
    &:nth-child(4)
      w 80px
    &:nth-child(5)
      w 80px
    &:nth-child(6)
      w 80px
      ta r
    &:nth-child(7)
      w 80px
      ta r
    &:nth-child(8)
      w 140px
    
  tbody
  thead
    bdl $bd


/// 仓库实体 统计
.order-store-statistics
  fz 0.85rem

  bd $bd
  bdt 0


/// 新增仓库 按钮
.order-create-btn
  ta cen
  pad 0.5rem
  bg $g1
  bdrz 2px
  cur ptr
  mt 2rem

  .ic
    cc $pc
    fz 1.5rem
    pos rela
    t 3px
    mr 0.25rem




.order-store-header
  bg $sc
  pos rela
  ta cen
  py 0.5rem

.order-store-close
  u-fill r
  lh 1.2
  cur ptr
  .ic
    fz 3rem
    cc #fff
    mx 1rem


.order-store-selectfield
  dis ib
  w 200px

.order-store-selectfield-field
  //pr 0
  bdc a0
  cc $cc
  .selectfield-placeholder
    cc $cc
  &:hover
  &:focus
  &:active
  &.active
    shadow initial

  &.active
    bg #fff

.order-store-selectfield-icon
  //dis ib
  //pos static
  //lh 1
  //h a
  .ic
    cc $cc

.order-store-selectfield-orderlist
  t 2rem



.order-store-operation
  dis ib
  mx 0.25rem
  cur ptr
  .ic
    fz 1.5rem


.order-store-prodpic
  dis ib
  mr 1rem

.order-store-proddetail
  dis ib
  py 1.2rem
  va top


